<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccountControllers</servlet-name>
        <servlet-class>com.controllers.AccountControllers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.controllers.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.controllers.loginControllers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.controllers.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffControllers</servlet-name>
        <servlet-class>com.controllers.StaffControllers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductControllers</servlet-name>
        <servlet-class>com.controllers.ProductControllers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountControllers</servlet-name>
        <url-pattern>/account/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffControllers</servlet-name>
        <url-pattern>/staff/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductControllers</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
